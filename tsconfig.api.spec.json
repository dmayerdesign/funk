{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "jest",
      "node"
    ],
    "paths": {
      "@funk/api/*": [ "./api/implementation/*" ],
      "@funk/config": [ "./config/config.development.ts" ],
      "@funk/copy/*": [ "./copy/*" ],
      "@funk/functions/*": [ "./functions/src/*" ],
      "@funk/helpers/*": [ "./helpers/*" ],
      "@funk/model/*": [ "./model/*" ],
      "@funk/plugins/persistence/*": [ "./plugins/implementation/persistence/api/*" ],
      "@funk/plugins/*": [ "./plugins/implementation/*" ],
      "@funk/plugins-spec/*": [ "./plugins/spec/*" ],
      "@funk/test/*": [ "./test/*" ]
    }
  },
  "include": [
    "api/implementation/**/*.ts",
    "config/**/*.ts",
    "functions/src/app/**/*.spec.ts",
    "functions/src/app/**/spec.ts",
    "plugins/implementation/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
