{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": ["jest", "node"],
    "paths": {
      "@funk/api/*": ["./api/*"],
      "@funk/configuration": ["./configuration/development.ts"],
      "@funk/copy/*": ["./copy/*"],
      "@funk/helpers/*": ["./helpers/*"],
      "@funk/model/*": ["./model/*"],
      "@funk/test/*": ["./test/*"]
    }
  },
  "include": ["api/**/*.ts", "configuration/**/*.ts"],
  "exclude": ["node_modules"]
}
