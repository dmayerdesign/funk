{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "ui/web/dist/web-browser",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "index.html",
        "headers": [{
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }]
      },
      {
        "source": "**",
        "headers": [{
          "key": "Content-Security-Policy",
          "value": "default-src 'self' https://*.googleapis.com https://*.cloudfunctions.net https://*.google.com https://*.gstatic.com; style-src 'unsafe-inline' 'self' https://fonts.googleapis.com/*"
        }]
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
