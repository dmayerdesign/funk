rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /sandbox/{document=**} {
      allow read;
      allow write;
    }

    match /products/{product}/{document=**} {
      allow get;
      allow list;
    }
    match /products/{product}/{document=**} {
      allow create;
      allow update;
      allow delete;
    }

  }
}
