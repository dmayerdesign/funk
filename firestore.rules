rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }
    function getRole() {
      return request.auth.token.role;
    }
    function isSuper() {
      return isSignedIn() && getRole() == "SUPER";
    }
    function isSuperOrOwner() {
      return isSignedIn() && (isSuper() || getRole() == "OWNER");
    }
    function isSuperOrOwnerOrAdmin() {
      return isSignedIn() && (isSuperOrOwner() || getRole() == "ADMINISTRATOR");
    }

    match /sandbox/{document=**} {
      allow read;
      allow write;
    }

    match /commerce.products/{product}/{document=**} {
      allow read;
      allow write: if isSuperOrOwnerOrAdmin();
    }

    match /user-configs/{uid}/{document=**} {
      function isAllowed() {
        return uid == request.auth.uid
          || isSuperOrOwner()
      }

      allow read: if isAllowed();
      allow create: if resource == null && isAllowed();
      allow update, delete: if isAllowed();
    }
  }
}
