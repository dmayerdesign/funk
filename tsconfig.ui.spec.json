{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": ["jest", "node"],
    "paths": {
      "@funk/configuration": [
        "./.funk/build-pipeline-output/configuration/test-configuration.ts"
      ],
      "@funk/helpers/*": ["./helpers/*"],
      "@funk/model/*": ["./model/*"],
      "@funk/test/*": ["./test/*"],
      "@funk/ui/*": ["./ui/*"]
    }
  },
  "include": [
    "configuration/**/*.ts",
    "ui/polyfills.ts",
    "ui/**/*.spec.ts",
    "ui/**/spec.ts",
    "ui/**/*.steps.ts",
    "ui/**/steps.ts"
  ],
  "exclude": ["node_modules"]
}
