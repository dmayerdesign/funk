{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "jest",
      "node"
    ],
    "paths": {
      "@funk/config": [ "./config/config.development.ts" ],
      "@funk/copy/*": [ "./copy/*" ],
      "@funk/helpers/*": [ "./helpers/*" ],
      "@funk/model/*": [ "./model/*" ],
      "@funk/test/*": [ "./test/*" ],
      "@funk/ui/*": [ "./ui/*" ]
    }
  },
  "include": [
    "config/**/*.ts",
    "ui/polyfills.ts",
    "ui/**/*.spec.ts",
    "ui/**/spec.ts",
    "functions/src/app/**/*.spec.ts",
    "functions/src/app/**/spec.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
