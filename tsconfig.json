{
  "compileOnSave": false,
  "compilerOptions": {
    "esModuleInterop": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "baseUrl": ".",
    "paths": {
      "@funk/config": [ "./.funk/build-pipeline-output/config/config" ],
      "@funk/copy/*": [ "./copy/*" ],
      "@funk/helpers/*": [ "./helpers/*" ],
      "@funk/model/*": [ "./model/*" ],
      "@funk/plugins/*": [ "./plugins/interface/*" ],
      "@funk/testing/config": [ "./config/config.development" ],
      "@funk/ui/web/*": [ "./ui/web/src/app/modules/*" ],
      "@funk/ui/helpers/*": [ "./ui/helpers/*" ]
    }
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "./functions/**/*"
  ]
}
