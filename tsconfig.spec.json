{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "jest",
      "node"
    ],
    "paths": {
      "@funk/config": [ "./.funk/build-pipeline-output/config/config" ],
      "@funk/copy/*": [ "./copy/*" ],
      "@funk/functions/*": [ "./functions/src/*" ],
      "@funk/helpers/*": [ "./helpers/*" ],
      "@funk/model/*": [ "./model/*" ],
      "@funk/plugins/*": [ "./funk-plugins/src/*" ],
      "@funk/testing/config": [ "./config/config.development" ],
      "@funk/test/*": [ "./test/*" ],
      "@funk/ui/web/*": [ "./ui/web/src/*" ],
      "@funk/ui/core/*": [ "./ui/core/*" ],
      "@funk/ui/helpers/*": [ "./ui/helpers/*" ]
    }
  },
  "include": [
    "config/**/*.ts",
    "ui/web/src/polyfills.ts",
    "ui/web/src/**/*.spec.ts",
    "ui/web/src/**/spec.ts",
    "functions/src/api/**/*.spec.ts",
    "functions/src/api/**/spec.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
