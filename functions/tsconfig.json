{
  "compilerOptions": {
    "outDir": "lib",
    "esModuleInterop": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2015",
    "lib": ["es2015", "esnext.asynciterable"],
    "baseUrl": ".",
    "paths": {
      "@funk/api/*": ["../api/*"],
      "@funk/configuration": [
        "../.funk/build-pipeline-output/configuration/configuration"
      ],
      "@funk/copy/*": ["../copy/*"],
      "@funk/functions/*": ["./src/*"],
      "@funk/helpers/*": ["../helpers/*"],
      "@funk/model/*": ["../model/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/node_modules/**/*"]
}
