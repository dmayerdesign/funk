{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2015",
    "lib": [
      "es2015",
      "esnext.asynciterable"
    ],
    "baseUrl": ".",
    "paths": {
      "@funk/config": [ "../config" ],
      "@funk/shared/*": [ "../shared/*" ]
    }
  },
  "include": [
    "./src/**/*.ts",
    "../shared/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
