{
  "extends": "./tsconfig.json",
  "include": ["src/**/*.ts"],
  "exclude": [
    "**/e2e.ts",
    "**/spec.ts",
    "**/*.spec.ts",
    "**/node_modules/**/*"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@funk/api/*": ["../api/*"],
      "@funk/configuration": [
        "../.funk/build-pipeline-output/configuration/configuration"
      ],
      "@funk/copy/*": ["../copy/*"],
      "@funk/functions/*": ["./src/*"],
      "@funk/helpers/*": ["../helpers/*"],
      "@funk/model/*": ["../model/*"]
    }
  }
}
